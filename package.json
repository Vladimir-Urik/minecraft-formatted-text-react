{
	"name": "minecraft-formatted-text-react",
	"version": "1.0.0",
	"description": "A React component that renders Minecraft-formatted text",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/iwillreku3206/minecraft-formatted-text-react"
	},
	"author": "IWillRekU3206",
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "yarn build:esm && yarn build:cjs",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir dist/cjs",
		"lint": "eslint --fix \"{**/*,*}.{js,ts,jsx,tsx}\"",
		"prettier": "prettier --write \"src/**/*.{js,ts,jsx,tsx}\"",
		"prepare": "npm run build",
		"prepublishOnly": "npm run prettier && npm run lint"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@types/react": "^18.0.31",
		"@typescript-eslint/eslint-plugin": "^5.57.0",
		"@typescript-eslint/parser": "^5.57.0",
		"eslint": "^8.37.0",
		"eslint-config-next": "^13.2.4",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"prettier": "^2.8.7",
		"react-dom": "^18.2.0",
		"typescript": "^5.0.2"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"keywords": [
  "react",
  "typescript",
  "minecraft",
	"component"
]
}
